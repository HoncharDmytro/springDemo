<?xml version="1.0" encoding="UTF-8"?>
    <beans xmlns="http://www.springframework.org/schema/beans"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:p="http://www.springframework.org/schema/p"
           xsi:schemaLocation=
                   "http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans.xsd"
                    default-lazy-init="true">
    <!--            default-lazy-init="true" default-init-method="init">     Use when init methods are same.       -->
        <bean id="singerOne"
              class="com.honchar.springDemo.chapter04.beanInitialization.Singer"
              init-method="init" p:name="John Mayer" p:age="39"/>
        <bean id="singerTwo"
              class="com.honchar.springDemo.chapter04.beanInitialization.Singer"
              init-method="init" p:age="72"/>
        <bean id="singerThree"
              class="com.honchar.springDemo.chapter04.beanInitialization.Singer"
              init-method="init" p:name="John Butler"/>
</beans>